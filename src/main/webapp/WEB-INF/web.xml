<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>Issue Tracker</display-name>
	<description>JEE training project implementation by Dzmitry Charnavoki</description>
	<servlet>
		<servlet-name>StartServlet</servlet-name>
		<servlet-class>org.training.dcharnavoki.issuetracker.controller.StartServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>org.training.dcharnavoki.issuetracker.controller.LoginController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutController</servlet-name>
		<servlet-class>org.training.dcharnavoki.issuetracker.controller.LogoutController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StartServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutController</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>/</welcome-file>
	</welcome-file-list>
	<servlet>
		<description></description>
		<display-name>IssueController</display-name>
		<servlet-name>IssueController</servlet-name>
		<servlet-class>org.training.dcharnavoki.issuetracker.controller.IssueController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>IssueController</servlet-name>
		<url-pattern>/issue</url-pattern>
	</servlet-mapping>
	<error-page>
		<error-code>404</error-code>
		<location>/errors/e404.html</location>
	</error-page>
	<filter>
		<display-name>Identification</display-name>
		<filter-name>Identification</filter-name>
		<filter-class>org.training.dcharnavoki.issuetracker.filter.Identification</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Identification</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>