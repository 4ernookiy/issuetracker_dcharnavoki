<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Issue Tracker</display-name>
  <description>JEE training project implementation by Dzmitry Charnavoki</description>
  <servlet>
    <servlet-name>AssignedController</servlet-name>
    <servlet-class>org.training.dcharnavoki.issuetracker.controller.AssignedController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MainController</servlet-name>
    <servlet-class>org.training.dcharnavoki.issuetracker.controller.MainController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>org.training.dcharnavoki.issuetracker.controller.user.LoginController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutController</servlet-name>
    <servlet-class>org.training.dcharnavoki.issuetracker.controller.user.LogoutController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddUserController</servlet-name>
    <servlet-class>org.training.dcharnavoki.issuetracker.controller.user.AddUserController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>IssueController</servlet-name>
    <servlet-class>org.training.dcharnavoki.issuetracker.controller.IssueController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreateIssueController</servlet-name>
    <servlet-class>org.training.dcharnavoki.issuetracker.controller.CreateIssueController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SaveIssueController</servlet-name>
    <servlet-class>org.training.dcharnavoki.issuetracker.controller.SaveIssueController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditIssueController</servlet-name>
    <servlet-class>org.training.dcharnavoki.issuetracker.controller.EditIssueController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterJsp</servlet-name>
    <jsp-file>/registerUser.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainController</servlet-name>
    <url-pattern>/Main</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddUserController</servlet-name>
    <url-pattern>/AddUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>IssueController</servlet-name>
    <url-pattern>/Issue</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AssignedController</servlet-name>
    <url-pattern>/Assigned</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterJsp</servlet-name>
    <url-pattern>/pageRegister</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateIssueController</servlet-name>
    <url-pattern>/CreateIssue</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SaveIssueController</servlet-name>
    <url-pattern>/SaveIssue</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditIssueController</servlet-name>
    <url-pattern>/EditIssue</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/page/error/e404.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/page/error/e401.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/page/error.jsp</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>Main</welcome-file>
  </welcome-file-list>
  <filter>
    <display-name>SetCharFilter</display-name>
    <filter-name>SetCharFilter</filter-name>
    <filter-class>org.training.dcharnavoki.issuetracker.filter.SetCharFilter</filter-class>
    <init-param>
    	<param-name>encoding</param-name>
    	<param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SetCharFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>